{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}


	<div class="justify-center justify-items mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8 mt-1 text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl lg:text-4xl">


		<div class="flex " justify-center>
			{% for top in tops %}

				<a href="#" class=" m-auto flex flex-col items-center bg-white rounded-lg border shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 border-zinc-400">
					<img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src="/docs/images/blog/image-4.jpg" alt="">
					<div class="flex flex-col justify-items p-4 leading-normal">
						<h5 class="mb-2 m-auto text-2xl font-bold tracking-tight text-amber-700 dark:text-white">
							{{top.stone.stonetype.type}}
							<br>

						</h5>
						<h5 class="mb-2 m-auto text-2xl font-bold tracking-tight text-gray-800 dark:text-white ">
							{{top.stone.stone}}
						</h5>

						<p class="text-gray-700 text-base dark:text-gray-400">

							Carat :
							{{top.carat}}
							<br>
							Prix :
							{{top.price}}
						</p>
					</div>
				</a>


			{% endfor %}
		</div>
	</div>


	<div></div>

{% endblock %}
